<h1>See all your posts</h1>

<% @posts.each do |post| %>
<div class="row">
  <div class="col-md-8">
  <h3><%= link_to post.title, post %></h3>
  </div>
  <div class="col-md-4">
    <h3>
      <small>
        <%= time_ago_in_words(post.updated_at) %> ago
        by <%= post.user.username %>
      </small>
    </h3>
  </div>
</div>
<% end %>
