<div class="comment">
  <div class="content">
    <p><%= comment.content %></p>
    <p><%= comment.user.email %></p>
  </div>
  <div class="comment_buttons">
    <%= link_to "Edit", edit_post_comment_path(comment.post, comment) %>
    <%= link_to "Delete", [comment.post, comment], method: :delete,
                          data: { confirm: "Delete comment?" } %>
  </div>
</div>
